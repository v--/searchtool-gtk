#!/usr/bin/env python3

import sys

import xdg.BaseDirectory

from searchtool_gtk import SearchToolValidationError, SearchToolApp, SearchToolConfigItem


if __name__ == '__main__':
    try:
        config_items = SearchToolConfigItem.read_from_file(
            xdg.BaseDirectory.load_first_config('searchtool.json')
        )
    except SearchToolValidationError as err:
        raise SystemExit(err)

    app = SearchToolApp(config_items)
    app.run(sys.argv)
