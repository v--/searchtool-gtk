#!/usr/bin/env bash

which gdbus > /dev/null || exit 1

if test "$#" -ne 1;
then
    echo 'Usage: searchtool-gtk-activate <mode_name>' > /dev/stderr
    exit 1
fi

gdbus call \
    --session \
    --dest net.ivasilev.SearchToolGTK \
    --object-path /net/ivasilev/SearchToolGTK \
    --method net.ivasilev.SearchToolGTK.Activate \
    "$1" > /dev/null
